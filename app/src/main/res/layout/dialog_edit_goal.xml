<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit Goal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/foreground"
            android:layout_marginBottom="16dp" />

        <!-- Goal Name -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/muted">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editGoalNameInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Goal Name"
                android:inputType="textCapWords"
                android:textColor="@color/foreground" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Minimum Amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/muted"
            app:prefixText="R ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editGoalMinAmountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimum Amount"
                android:inputType="numberDecimal"
                android:textColor="@color/foreground" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Maximum Amount -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/muted"
            app:prefixText="R ">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editGoalMaxAmountInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Maximum Amount"
                android:inputType="numberDecimal"
                android:textColor="@color/foreground" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Deadline -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/muted">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editGoalDeadlineInput"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Deadline (e.g., 3 Months)"
                android:inputType="text"
                android:textColor="@color/foreground" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/editGoalCancelButton"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/muted_foreground"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/editGoalSaveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Changes"
                android:backgroundTint="@color/accent"
                android:textColor="@color/accent_foreground" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>