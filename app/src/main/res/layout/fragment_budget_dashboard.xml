<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="@string/back"
                app:tint="@color/foreground" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/budget_dashboard"
                    android:textColor="@color/foreground"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Complete budget analysis"
                    android:textColor="@color/muted_foreground"
                    android:textSize="14sp"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Budget Health Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget Health Dashboard"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/foreground"
                    android:layout_marginBottom="8dp"/>

                <!-- Top row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/progress_text"
                        style="@style/Widget.MaterialComponents.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0% Used"
                        android:textSize="12sp"
                        android:textColor="@android:color/white"
                        app:backgroundTint="@color/primary"
                        app:cornerRadius="50dp"
                        app:iconPadding="0dp"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"/>

                    <TextView
                        android:id="@+id/total_budget_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="R0.00 / R600.00"
                        android:textColor="@color/muted_foreground"/>
                </LinearLayout>

                <ProgressBar
                    android:id="@+id/budget_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/primary"
                    android:progressBackgroundTint="@color/muted_foreground"
                    android:layout_marginVertical="12dp"/>

                <!-- Bottom row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/remaining_budget_text"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"
                        android:text="R600.00 Remaining"
                        android:textColor="@color/success"
                        android:textSize="16sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/days_left_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5 days left"
                        android:textColor="@color/warning"
                        android:textSize="16sp"
                        android:textStyle="bold"/>
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Performance Summary -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance Summary"
            android:textColor="@color/foreground"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:layout_marginBottom="16dp">

            <!-- On Track -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/on_track_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="6\nOn Track"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/success"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Watch -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/watch_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="0\nWatch"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/warning"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Critical -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/critical_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="0\nCritical"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/destructive"/>
            </com.google.android.material.card.MaterialCardView>

            <!-- Over -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/over_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="12dp"
                    android:text="0\nOver"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/error"/>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>

        <!-- Category Breakdown -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Breakdown"
            android:textColor="@color/foreground"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/category_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Smart Recommendations -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Smart Recommendations"
                    android:textColor="@color/foreground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Great job! You're managing most categories well\n• Consider saving the remaining budget or treating yourself responsibly\n• Set up alerts when categories reach 75% to avoid overspending"
                    android:textColor="@color/muted_foreground"
                    android:textSize="14sp"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>
</ScrollView>
