<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choose_your_character"
            android:textColor="@color/foreground"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            android:text="@string/pick_a_character_to_accompany_you_on_nyour_budgeting_journey"
            android:textColor="@color/muted_foreground"
            android:textSize="16sp"
            tools:ignore="TextContrastCheck" />

        <!-- Characters Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="48dp"
            android:weightSum="2">

            <!-- Luna Character -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/character_luna"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/muted_foreground"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Character Image -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/character_female"
                        android:contentDescription="@string/luna"
                        android:layout_marginBottom="16dp" />

                    <!-- Character Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/luna"
                        android:textColor="@color/foreground"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Character Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/organized_n_and_cheerful"
                        android:textColor="@color/muted_foreground"
                        android:textSize="14sp"
                        tools:ignore="TextContrastCheck" />

                    <!-- Selection Check -->
                    <ImageView
                        android:id="@+id/check_luna"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="invisible"
                        app:tint="@color/accent"
                        android:layout_marginTop="12dp"
                        tools:ignore="ContentDescription" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Max Character -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/character_max"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="@color/accent"
                app:strokeWidth="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:gravity="center">

                    <!-- Character Image -->
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:src="@drawable/character_happy"
                        android:contentDescription="@string/max"
                        android:layout_marginBottom="16dp" />

                    <!-- Character Name -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/max"
                        android:textColor="@color/foreground"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <!-- Character Description -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/smart_and_nfriendly"
                        android:textColor="@color/muted_foreground"
                        android:textSize="14sp"
                        tools:ignore="TextContrastCheck" />

                    <!-- Selection Check -->
                    <ImageView
                        android:id="@+id/check_max"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/ic_check_circle"
                        android:visibility="visible"
                        app:tint="@color/accent"
                        tools:ignore="ContentDescription,ImageContrastCheck" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Continue Button -->
        <Button
            android:id="@+id/continue_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent"
            android:paddingVertical="16dp"
            android:text="@string/continue_with_max"
            android:textColor="@color/accent_foreground"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="TextContrastCheck,VisualLintButtonSize" />

    </LinearLayout>
</ScrollView>