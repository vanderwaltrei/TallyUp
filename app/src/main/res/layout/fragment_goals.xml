<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <!-- Header -->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        app:cardBackgroundColor="@color/card_background"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <ImageButton
                android:id="@+id/back_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/back"
                android:src="@drawable/ic_arrow_left"
                app:tint="@color/foreground" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:text="@string/savings_goals"
                android:textColor="@color/foreground"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/add_goal_button"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/add_goal"
                android:src="@drawable/ic_add"
                app:tint="@color/accent"
                tools:ignore="ImageContrastCheck" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        android:visibility="gone"> <!-- visible by default -->

        <ImageView
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="@string/no_goals"
            android:src="@drawable/ic_target"
            android:translationY="-187dp"
            app:tint="@color/muted_foreground"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/no_goals_yet"
            android:textColor="@color/foreground"
            android:textSize="18sp"
            android:textStyle="bold"
            android:translationY="-187dp"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:text="@string/create_your_first_savings_goal_to_start_building_your_financial_future"
            android:textColor="@color/muted_foreground"
            android:textSize="14sp"
            android:translationY="-187dp"
            tools:ignore="VisualLintBounds" />

        <Button
            android:id="@+id/create_first_goal_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/accent"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp"
            android:text="Create Your First Goal"
            android:textColor="@color/accent_foreground"
            android:translationY="-187dp"
            tools:ignore="HardcodedText,VisualLintBounds" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:visibility="visible">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/goalsGrid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:clipToPadding="false"
            android:scrollbars="vertical" />

    </LinearLayout>

    <!-- End of "No goals yet" page -->

    <!-- Start of "Create New Goal" page -->
    <androidx.cardview.widget.CardView
        android:id="@+id/create_goal_page"
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:translationY="10dp"
        android:visibility="gone"> <!-- hidden by default -->

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/create_new_goal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="130dp"
            android:translationY="10dp"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/goal_name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="50dp"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/target_amount"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="160dp"
            tools:ignore="VisualLintBounds" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deadline"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="270dp"
            tools:ignore="VisualLintBounds" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:translationX="20dp"
            android:translationY="70dp"
            tools:ignore="VisualLintBounds">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goalNameInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="e.g. New Laptop"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:translationX="20dp"
            android:translationY="180dp"
            tools:ignore="VisualLintBounds">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goalAmountInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="e.g. 500"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:translationX="20dp"
            android:translationY="290dp"
            tools:ignore="VisualLintBounds">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goalDeadlineInput"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="e.g. 3 Months"
                android:textStyle="italic"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/create_goal_submit_button"
            android:layout_width="328dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Create Goal"
            android:translationX="40dp"
            android:translationY="380dp"
            tools:ignore="HardcodedText,VisualLintBounds" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/add_money"
        android:layout_width="match_parent"
        android:layout_height="165dp"
        android:translationY="20dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/amount_to_add"
            android:textStyle="bold"
            android:translationX="20dp"
            android:translationY="30dp"
            tools:ignore="VisualLintBounds" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="387dp"
            android:layout_height="wrap_content"
            android:translationX="10dp"
            android:translationY="50dp"
            tools:ignore="VisualLintBounds">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/goalAdd"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="R0.00"
                tools:ignore="HardcodedText" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:id="@+id/tvAddMoney"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_money_to_quot_quot"
            android:textSize="20sp"
            android:textStyle="bold"
            android:translationX="110dp"
            tools:ignore="VisualLintBounds" />

        <Button
            android:id="@+id/btnAddMoney"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#FF9800"
            android:text="Add Money"
            android:translationX="75dp"
            android:translationY="115dp"
            tools:ignore="HardcodedText,VisualLintBounds" />

        <Button
            android:id="@+id/goalBack"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:backgroundTint="#0000BCD4"
            android:text="@string/x"
            android:textColor="#020202"
            android:textSize="16sp"
            android:textStyle="bold"
            android:translationX="350dp"
            tools:ignore="VisualLintBounds" />
    </androidx.cardview.widget.CardView>

</LinearLayout>