<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="false"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top Row: Icon, Category Name, and Amount -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <!-- Icon with Background -->
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/circle_background">

                <ImageView
                    android:id="@+id/categoryIcon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_shopping_bag"
                    android:contentDescription="@string/categoryicon"
                    app:tint="@color/primary" />
            </FrameLayout>

            <!-- Category Name and Subtitle -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/categoryName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/food"
                    android:textColor="@color/foreground"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:id="@+id/categorySubtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Budget: R 500"
                    android:textColor="@color/muted_foreground"
                    android:textSize="12sp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

            <!-- Spent Amount -->
            <TextView
                android:id="@+id/categorySpentAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R 230"
                android:textColor="@color/foreground"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:progress="46"
            android:max="100"
            android:progressTint="@color/primary"
            android:progressBackgroundTint="@color/muted"
            android:layout_marginBottom="8dp" />

        <!-- Bottom Row: Remaining and Percentage -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/categoryRemaining"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="R 270 left"
                android:textColor="@color/success"
                android:textSize="13sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/categoryPercentage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="46% used"
                android:textColor="@color/muted_foreground"
                android:textSize="12sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <!-- Edit Section (Expandable) -->
        <LinearLayout
            android:id="@+id/editSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:background="@color/primary_soft"
            android:padding="16dp"
            app:cornerRadius="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/set_monthly_budget"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="12dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/r"
                    android:textColor="@color/foreground"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp" />

                <EditText
                    android:id="@+id/editAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/enter_amount"
                    android:importantForAutofill="no"
                    android:inputType="numberDecimal"
                    android:padding="12dp"
                    android:background="@color/white"
                    android:textColor="@color/foreground"
                    android:textColorHint="@color/muted_foreground"
                    android:minHeight="48dp" />
            </LinearLayout>

            <!-- Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnCancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/cancel"
                    android:textColor="@color/muted_foreground"
                    android:layout_marginEnd="8dp"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:textAllCaps="false" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSave"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/save_budget"
                    android:textColor="@color/primary_foreground"
                    app:backgroundTint="@color/primary"
                    app:rippleColor="@color/primary_light"
                    android:paddingHorizontal="16dp"
                    android:textAllCaps="false" />
            </LinearLayout>
        </LinearLayout>

        <!-- Edit Button -->
        <Button
            android:id="@+id/btnExpandContainer"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_budget"
            android:textColor="@color/primary"
            android:textSize="13sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="8dp"
            app:icon="@drawable/ic_edit"
            app:iconGravity="textStart"
            app:iconTint="@color/primary" />

    </LinearLayout>
</androidx.cardview.widget.CardView>