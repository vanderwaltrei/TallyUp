<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    android:elevation="2dp"
    android:padding="16dp"
    app:cardBackgroundColor="@color/card_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- Left Column -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/transaction_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="4dp"
                android:text="Groceries - Expense"
                android:textColor="@color/foreground"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/transaction_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="06 Oct 2025"
                android:textColor="@color/muted_foreground"
                android:textSize="14sp"
                android:layout_marginTop="8dp"
                android:paddingStart="8dp" />

            <TextView
                android:id="@+id/photo_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos attached"
                android:textColor="@color/muted_foreground"
                android:textSize="14sp"
                android:layout_marginTop="4dp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp" />
        </LinearLayout>

        <!-- Right Column: Amount fills height and centers vertically -->
        <TextView
            android:id="@+id/transaction_amount"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="R 250.00"
            android:textColor="@color/foreground"
            android:textSize="24sp"
            android:textStyle="bold"
            android:paddingEnd="16dp"
            android:paddingStart="8dp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>