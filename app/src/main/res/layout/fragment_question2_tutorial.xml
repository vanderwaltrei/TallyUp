<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:padding="24dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Question -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="What's one thing you're\nsaving for?"
            android:textColor="@color/foreground"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Example Text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="e.g., New headphones"
            android:textColor="@color/muted_foreground"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginBottom="32dp" />

        <!-- Input Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="48dp"
            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
            app:boxBackgroundColor="@color/card_background"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/saving_goal_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your saving goal"
                android:inputType="textCapSentences"
                android:maxLines="1"
                android:textColor="@color/foreground"
                android:textSize="16sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Start Saving Button -->
        <Button
            android:id="@+id/start_saving_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Saving!"
            android:textSize="16sp"
            android:textStyle="bold"
            android:paddingVertical="16dp"
            android:backgroundTint="@color/accent"
            android:textColor="@color/accent_foreground"
            android:enabled="false" />

    </LinearLayout>
</ScrollView>